# MANIFEST.in - 告诉setuptools包含哪些非Python文件

# 包含C源代码和头文件
include sage.utils/mmap_queue/*.c
include sage.utils/mmap_queue/*.h
include sage.utils/mmap_queue/Makefile
include sage.utils/mmap_queue/build.sh

# 包含预编译的共享库（可选，建议从源码编译）
include sage.utils/mmap_queue/*.so

# 包含配置文件
recursive-include config *.yaml *.yml
recursive-include deployment/config *.yaml *.yml

# 包含脚本文件
recursive-include deployment/scripts *.sh
recursive-include deployment/templates *

# 包含文档
include README.md
include LICENSE
include *.md

# 排除测试文件（注释掉以避免安装测试文件）
# recursive-include tests *
# recursive-include sage_tests *

# 排除不需要的文件
global-exclude *.pyc
global-exclude *.pyo
global-exclude *~
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store

# 显式排除测试目录
recursive-exclude tests *
recursive-exclude */tests *
recursive-exclude */test *
prune tests
prune */tests
prune */test
