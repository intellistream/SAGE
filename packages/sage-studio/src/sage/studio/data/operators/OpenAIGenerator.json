{
    "id": 1,
    "name": "OpenAIGenerator",
    "description": "A generator that uses OpenAI's API to generate responses.",
    "module_path": "sage.middleware.operators.rag.generator",
    "class_name": "OpenAIGenerator",
    "isCustom": false,
    "parameters": [
        {
            "name": "model_name",
            "label": "模型名称",
            "type": "select",
            "required": true,
            "defaultValue": "gpt-3.5-turbo",
            "options": [
                "gpt-3.5-turbo",
                "gpt-4",
                "gpt-4-turbo",
                "gpt-4o"
            ],
            "description": "OpenAI 模型名称"
        },
        {
            "name": "api_key",
            "label": "API Key",
            "type": "password",
            "required": true,
            "defaultValue": "",
            "placeholder": "请输入 OpenAI API Key",
            "description": "OpenAI API 密钥"
        },
        {
            "name": "api_base",
            "label": "API 端点",
            "type": "text",
            "required": false,
            "defaultValue": "https://api.openai.com/v1",
            "placeholder": "默认: https://api.openai.com/v1",
            "description": "OpenAI API 端点地址（可自定义代理）"
        },
        {
            "name": "temperature",
            "label": "Temperature",
            "type": "number",
            "required": false,
            "defaultValue": 0.7,
            "min": 0,
            "max": 2,
            "step": 0.1,
            "description": "控制生成文本的随机性"
        },
        {
            "name": "max_tokens",
            "label": "最大 Token 数",
            "type": "number",
            "required": false,
            "defaultValue": 2048,
            "min": 1,
            "max": 128000,
            "step": 1,
            "description": "生成文本的最大 token 数量"
        },
        {
            "name": "system_prompt",
            "label": "系统提示词",
            "type": "textarea",
            "required": false,
            "defaultValue": "You are a helpful AI assistant.",
            "placeholder": "请输入系统提示词",
            "description": "定义 AI 的角色和行为"
        }
    ]
}
